<?xml version="1.0"?>

<launch>
  <arg name="paused" default="false" />
  <arg name="use_sim_time" default="true" />
  <arg name="gui" default="true" />
  <arg name="world" default="$(find drone_test)/worlds/new_world.world" />
  <arg name="headless" default="false" />
  <arg name="debug" default="false" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world)" />
    <arg name="paused" value="$(arg paused)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="debug" value="$(arg debug)" />
  </include>

  <node name="odom_pub" pkg="drone_test" type="odom.py" output="screen" />
  <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="1 0 0 0 0 0 1 base_link odom 100" />

  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor_with_asus_with_laser.launch">
    <arg name="x" value="4" />
    <arg name="y" value="4" />
  </include>

  <node name="rvizvisualisation" pkg="rviz" type="rviz" output="log" args="-d $(find drone_test)/config/config.rviz" />

  <include file="$(find octomap_server)/launch/octomap_mapping.launch">
  </include>
  <include file="$(find drone_test)/launch/gmap.launch">
  </include>
  <node name="teleop" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" output="screen" launch-prefix="xterm -e" />


</launch>
